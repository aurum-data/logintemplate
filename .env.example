# Server settings
PORT=3000
NODE_ENV=development

# Google OAuth (Web client ID)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Session signing (required)
AUTH_SESSION_SECRET=replace-with-a-long-random-string

# Optional: also expose client ID directly to Vite
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Optional: comma-separated allowed origins for CORS
# CORS_ORIGINS=http://localhost:5173

# Optional: force secure cookies (true in production)
# COOKIE_SECURE=true

# PayPal subscriptions (required for Subscription page)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
# sandbox or live
PAYPAL_ENV=sandbox
# Optional override for PayPal API base URL
# PAYPAL_API_BASE_URL=https://api-m.sandbox.paypal.com

# Optional: subscription display metadata
SUBSCRIPTION_NAME=Prototype Subscription
SUBSCRIPTION_PRICE=19.00
SUBSCRIPTION_CURRENCY=USD

# Admin access (comma-separated emails)
ADMIN_EMAILS=admin@example.com

# Database connection for subscription signups
# DATABASE_URL=postgres://user:password@localhost:5432/logintemplate
# Optional fallback path when DATABASE_URL is not set
# SUBSCRIPTIONS_DB_PATH=server/data/subscriptions.db
